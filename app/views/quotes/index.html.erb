<p id="notice"><%= notice %></p>

<h1 align="center">Quotes</h1>

<br>
<div align="center">
<%= link_to 'New Quote', new_quote_path, class: "btn btn-info btn-lg" %> &ensp; <%= link_to 'Authors', authors_path, class: "btn btn-secondary btn-lg" %>
</div>
<br>

<div class="card-columns" style="column-count: 4; margin: 30px;">
  <% @quotes.each do |quote| %>
      <a href="/quotes/<%= quote.id %>" class="card p-3" style="color: #4d4d4d;">
        <blockquote class="blockquote mb-0 ">
          <p class="text-center"><%= quote.text %></p>
          <footer class="blockquote-footer text-right">
            <small class="text-muted "> <%= quote.author %>
            </small>
          </footer>
        </blockquote>
      </a>
  <% end %>
</div>
