<p id="notice"><%= notice %></p>

<h1 align="center">Quotes</h1>

<br>
<div align="center">
<%= link_to 'New Quote', new_quote_path, class: "btn btn-info btn-lg" %> &ensp; <%= link_to 'Authors', authors_path, class: "btn btn-secondary btn-lg" %>
</div>
<br>
<table align="center" >
  <thead>
    <tr align="center">
      <th>Author</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td align="center"><%= quote.author %></td>
        <td style="max-width: 800px; margin: auto;"><%= quote.text %></td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

