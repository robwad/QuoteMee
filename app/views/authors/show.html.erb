<br>
<h1 align="center"> <%= @author.author_name %> </h1>
<p style="max-width: 1000px; margin: auto;">
   <%= @author.description %>
</p>
<br>
<div align="center">
<a class="btn btn-info btn-lg" href="/authors/<%=@author.slug%>/edit">Edit</a> &ensp;
<%= link_to 'Delete', "/authors/#{@author.slug}", method: :delete, class: "btn btn-danger btn-lg" %> &ensp;
<a class="btn btn-secondary btn-lg" href="/authors">Back</a>
</div>
<br>
<h2 align="center">Quotes</h2>


<div class="card-columns" style="column-count: 4; margin: 30px;">
  <% @quotes.each do |quote| %>
      <a href="/quotes/<%= quote.id %>" class="card p-3" style="color: #4d4d4d;">
        <blockquote class="blockquote mb-0 ">
          <p class="text-center"><%= quote.text %></p>
          <footer class="blockquote-footer text-right">
            <small class="text-muted "> <%= quote.author %>
            </small>
          </footer>
        </blockquote>
      </a>
  <% end %>
</div>

